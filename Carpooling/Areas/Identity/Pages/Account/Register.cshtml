@page
@model RegisterModel
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />
    <link rel="stylesheet" href="~/css/registerStyles.css" />

</head>
<body>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-register">
        <h1>¡Únete a nosotros!</h1>
        <div class="contenedor row">
            <div asp-validation-summary="All" class="text-danger col-md-12"></div>
            <div class="input-contenedor col-md-6">
                <i class="fas fa-user icon"></i>
                <input asp-for="Input.Nombre" placeholder="Nombres" type="text" class="input-48" required />
            </div>
            <div class="input-contenedor col-md-6">
                <i class="fas fa-user icon"></i>
                <input asp-for="Input.Apellido" placeholder="Apellidos" type="text" class="input-48" required />
            </div>
            <div class="input-contenedor col-md-12">
                <i class="fas fa-user icon"></i>
                <input asp-for="Input.Nick" placeholder="Nickname" type="text" class="input-100" required />
            </div>
            <div class="input-contenedor col-md-6">
                <i class="fas fa-map-marker-alt icon"></i>
                <input asp-for="Input.Direccion" placeholder="Dirección" type="text" class="input-48" required />
            </div>
            <div class="input-contenedor col-md-6">
                <i class="fas fa-briefcase icon"></i>
                <input asp-for="Input.Area" placeholder="Área de Trabajo" type="text" class="input-48" required />
            </div>
            <div class="input-contenedor col-md-6">
                <i class="fas fa-envelope icon"></i>
                <input asp-for="Input.Email" placeholder="Correo Electrónico" type="email" class="input-48" required />
            </div>
            <div class="input-contenedor col-md-6">
                <i class="fas fa-phone icon"></i>
                <input asp-for="Input.PhoneNumber" placeholder="Teléfono" type="number" class="input-48" required />
            </div>
            <div class="input-contenedor col-md-12">
                <i class="fas fa-key icon"></i>
                <input asp-for="Input.Contraseña" placeholder="Contraseña" type="password" class="input-100" required />
            </div>
            <div class="input-contenedor col-md-12">
                <i class="fas fa-key icon"></i>
                <input asp-for="Input.ConfirmacionContraseña" placeholder="Confirmar contraseña" type="password" class="input-100" required />
            </div>
            <input type="submit" value="Registrarse" class="button" />
            <br /><br />
            <p>¿Ya tienes cuenta?<a class="link" href="/Identity/Account/Register"> Inicia sesión aquí</a></p>
        </div>
    </form>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}