
@{
    ViewData["Title"] = "Profile";
}

@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager

<html>

<head>
    <meta charset="UTF-8">
    <title>Perfil</title>
    <link rel="stylesheet" href="~/css/Profile.css" />
    <style>
        h1 {
            color: #efefef;
        }
    </style>

</head>
<body>
    <div class="container">

        <div class="card-profile">
            <div class="card-profile_visual"></div>

            <div class="card-profile_user-infos">
                <span class="infos_name">@UserManager.GetUserName(User)</span>


                <a href="#"></a>
            </div>




            <div class="card-profile_user-stats">
                <div class="stats-holder">
                    <div class="user-stats">
                        <strong>Viajes</strong>
                        <span>0</span>
                    </div>


                    <div class="avatar">
                        <img src="https://www.infobae.com/new-resizer/CBId-A7fnDmhj2kKbIX0eTAVV50=/750x0/filters:quality(100)/s3.amazonaws.com/arc-wordpress-client-uploads/infobae-wp/wp-content/uploads/2016/07/06212701/iron-man-1920-1024x576.jpg">
                    </div>

                    <div class="user-stats">
                        <strong>Puntuación</strong>
                        <span>0</span>
                    </div>

                </div>
            </div>

        </div>

    </div>


    <div class="cont">


        <div class="info-profile">
            <h1 align="center" color="#ffffff">Información de usuario  </h1>
            <br /><br /><br />

            <div class="info-profile_user-stats">
                <div class="stats-holder">

                    <table align="center">
                        <tr>

                            <td>
                                <div class="user-stats">
                                    <strong>Nombre</strong>
                                    <span>Iron Man</span>
                                </div>
                                <br />


                                <div class="user-stats">
                                    <strong>Correo electrónico</strong>
                                    <span>IronMan@nada.com</span>
                                </div>
                                <br />

                                <div class="user-stats">
                                    <strong>Teléfono</strong>
                                    <span>1234567890</span>
                                </div>
                                <br />

                                <div class="user-stats">
                                    <strong>Área de trabajo</strong>
                                    <span>Dueño</span>
                                </div>


                                <br />
                                <div class="user-stats">
                                    <strong>Calificación pasajero</strong>
                                    <span>4.5</span>
                                </div>
                                <br />
                            </td>

                            <td>

                                <br />
                                <br />
                                <div class="user-stats">
                                    <strong>Calificación conductor</strong>
                                    <span>4.5</span>
                                </div>
                                <br />

                                <div class="user-stats">
                                    <strong>Cantidad de viajes realizados</strong>
                                    <span>50</span>
                                </div>
                                <br />

                                <div class="user-stats">
                                    <strong>Tipo Vehiculo</strong>
                                    <span>Mazda 5</span>
                                </div>
                                <br />

                                <div class="user-stats">
                                    <strong>Placa Vehiculo</strong>
                                    <span>MD0-562</span>
                                </div>
                                <br />

                                <div class="user-stats">
                                    <strong>Color Vehiculo</strong>
                                    <span>Negro</span>
                                </div>
                                <br />



                                <br />
                                <br />

                            </td>
                        </tr>
                    </table>

                    <div class="text-left">
                    <a class="btn btn-info" style="font-family:'Times New Roman', Times, serif ;color: white; background-color:crimson; border: crimson" >
                        Editar
                    </a>
                    </div>
                    


                </div>
            </div>

        </div>

    </div>

   


</body>



</html>

