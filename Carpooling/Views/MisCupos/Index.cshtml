
@model IEnumerable<Carpooling.Models.Viaje>


@using Microsoft.AspNetCore.Identity

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager



<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/TablaEstilo.css">
    <style>

        body {
            margin: 0;
            background: url(../images/animado7.gif);
            background-size: cover;
            background-attachment: fixed;
        }

        * {
            box-sizing: border-box;
        }

        .contenedor {
            margin: auto;
            margin-top: 100px;
            width: 95%;
            text-align: center;
        }

        .tablaPasajero {
            width: 48%;
            float: left;
        }

        .tablaConductor {
            width: 48%;
            float: right;
        }

        table {
            width: 100%;
        }

        th, td {
            width: 25%;
        }

        table th, table tr {
            text-align: center;
        }

        th, td {
            width: 25%;
            text-align: left;
            vertical-align: top;
            border: 1px solid #000;
            border-collapse: collapse;
            caption-side: bottom;
        }

        caption {
            font-weight: bold;
            font-style: italic;
        }

        th {
            background: #eee;
        }

        table tr {
            align-content : center;
        }

        tbody th, tfoot th {
            border: 0;
        }

        th.name {
            width: 25%;
        }

        th.location {
            width: 20%;
        }

        th.lasteruption {
            width: 30%;
        }

        th.eruptiontype {
            width: 25%;
        }

    </style>
</head>
<body>
    <div class="contenedor">
        <head>
            <style>
                h1 {
                    color: #eee;
                }
            </style>
        </head>
        <body>
            <h1>Mis Cupos Activos</h1>
            
        </body>
        <p>Aquí se encuentran los cupos que publicaste y también los que estas inscrito</p>
        <div class="tablaPasajero">
            <head>
                <style>
                    h3 {
                        color: #eee;
                    }
                </style>
            </head>
            <h3>Como pasajero</h3>
            <table>
                
                @*<thead>
                    <tr>
                        <th>Nombre del Conductor</th>
                        <th>Cupos</th>
                        <th>Tipo de Viaje</th>
                        <th>Hora</th>
                        <th></th>
                    </tr>
                </thead>*@

                <tbody>
                    @foreach (var item in Model)
                    {
                        DateTime hoy = DateTime.Today;
                        if (item.emailotro != null && item.emailotro.Equals(@UserManager.GetUserName(User)) && !item.EsMio)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreConductor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cupos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoViaje)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hora)
                                </td>
                                <td>
                                    <a asp-action="../Tracking/Index" asp-route-id="" class="btn btn-info">Empezar viaje.</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
       
            </table>
        </div>
       

        <div class="tablaConductor">
            <h3>Como Conductor</h3>
            <table align="center" style="text-align : center;">
                <thead>
                    <tr>
                        <th>Cupos</th>
                        <th>Tipo de Viaje</th>
                        <th>Hora</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        DateTime hoy = DateTime.Today;
                        if (item.NombreConductor.Equals(@UserManager.Users.First(j => j.UserName.Equals(@UserManager.GetUserName(User))).Email))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cupos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoViaje)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hora)
                                </td>
                                <td>
                                    <a asp-action="../Tracking/Index" asp-route-id="" class="btn btn-info">Empezar viaje.</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>