@model Carpooling.Models.Vehiculo;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Microsoft.AspNetCore.Identity

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<html>
    <head>
        <link rel="stylesheet" href="~/css/loginStyles.css" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body {
                background: url(../images/numero.jpg);
                background-size: cover;
                background-attachment: fixed;
            }
        </style>
    </head>
    <body>
       


        <form asp-action="Create" class="formulario">
            <h1>Crea tu Vehiculo</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="contenedor">
                <div class="input-contenedor">
                    <i class="fas fa-info-circle icon"></i>
                    <input asp-for="Marca" type="text" placeholder="Marca" />
                </div>
                <div class="input-contenedor">
                    <i class="far fa-clock icon"></i>
                    <input asp-for="Placa"  placeholder="PLaca" />
                </div>
                <div class="input-contenedor">
                    <i class="fas fa-info-circle icon"></i>
                    <input asp-for="Modelo" type="text" placeholder="Modelo" />
                </div>
                <div class="input-contenedor">
                    <i class="fas fa-info-circle icon"></i>
                    <input asp-for="Color" type="text" placeholder="Color" />
                </div>
                <div class="input-contenedor">
                    <i class="fas fa-info-circle icon"></i>
                    <label asp-for="UsuarioId" class="control-label"> Nickname</label>
                    @{
                        SelectList currentUser = new SelectList(new List<String> { UserManager.FindByNameAsync(User.Identity.Name).Result.Nick }, "Nickname");
                    }
                    <select asp-for="UsuarioId" class="form-control" asp-items=@currentUser></select>
                </div>
               
                    <input type="submit" value="Publicar" class="bottom" />
               

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>

            </div>
         </form>
         
        <script src="http://code.jquery.com/jquery-latest.js"></script>
        <script src="particles.min.js"></script>
        <script src="particulas.js"></script>
    </body>
</html>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
