@model Carpooling.Models.Viaje

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Identity

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<link rel="stylesheet" href="~/css/crearViaje.css" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/css?family=Lato:400,900" rel="stylesheet">

<div class="row" id="container">
    <div class="col-md-4" id="hola">
        <h2>Publica tu cupo</h2>
        <form asp-action="Create" class="form__reg" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" class="form-control" type="datetime-local" placeholder="&#x231A;" />
            </div>
            <div class="form-group">
                <label asp-for="TipoViaje" class="control-label"></label>
                <select>
                    <option value="Ida">Ida</option>
                    <option value="Regreso">Regreso</option>
                </select>
               </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" value="Disponible" readonly="readonly" required />
                </div>
            <div class="form-group">
                <label asp-for="Cupos" class="control-label"></label>
                <input asp-for="Cupos" class="form-control" type="number" min="1" />
            </div>
            <div class="form-group">
                <label asp-for="NombreConductor" class="control-label"></label>
                @{
                    SelectList currentUser = new SelectList(new List<String> { UserManager.GetUserName(User) }, "UserName");
                }
                <select asp-for="NombreConductor" class="form-control" asp-items=@currentUser ></select>
               </div>

            <div class="form-group">
                <input type="submit" value="Publicar" class="boton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
