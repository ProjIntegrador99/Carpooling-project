@model Carpooling.Models.Viaje

<head>
    <link rel="stylesheet" href="~/css/detallesStyle.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,900" rel="stylesheet">
</head>
<body>
    <div class="contenedor">
        <h1>Detalles de la publicación</h1>
        <dl class="detalles">
            <dt>
                Descripción
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Hora)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Hora)
            </dd>
            <dt>
                Tipo de Viaje
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TipoViaje)
            </dd>
            <dt>
                Estado del viaje
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt>
                Número de cupos disponibles
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cupos)
            </dd>
            <dt>
                Nombre del conductor
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NombreConductor)
            </dd>
        </dl>
        <input type="button" value="Volver al muro" class="button" onclick="location.href='/Viajes/Index'" />
    </div>
</body>
